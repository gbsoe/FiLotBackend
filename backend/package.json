{
  "name": "filot-backend",
  "version": "1.0.0",
  "description": "FiLot Backend API - Financial AI Assistant",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:redis": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/redis",
    "test:temporal": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/temporal",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e",
    "test:full": "ts-node scripts/run-full-system-test.ts",
    "simulate:ecs": "ts-node scripts/simulate-ecs-runtime.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "temporal:test": "ts-node-dev src/temporal/testConnection.ts"
  },
  "keywords": [
    "filot",
    "backend",
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.939.0",
    "@aws-sdk/s3-request-presigner": "^3.939.0",
    "@temporalio/client": "^1.11.7",
    "@temporalio/common": "^1.11.7",
    "@temporalio/proto": "^1.13.2",
    "@temporalio/worker": "^1.11.7",
    "@temporalio/workflow": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.2",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-tesseract-ocr": "^2.2.0",
    "pg": "^8.16.3",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^3.0.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
